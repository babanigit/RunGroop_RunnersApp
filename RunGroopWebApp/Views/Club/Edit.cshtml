@using RunGroopWebApp.Data.Enum
@using RunGroopWebApp.ViewModels
@model EditClubViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Edit Club Details</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Edit" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Title" class="form-label">Club Name</label>
                                <input asp-for="Title" class="form-control" placeholder="Enter club name">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ClubCategory" class="form-label">Club Category</label>
                                <select asp-for="ClubCategory" asp-items="@Html.GetEnumSelectList<ClubCategory>()"
                                    class="form-select">
                                    <option value="">Select Category</option>
                                </select>
                                <span asp-validation-for="ClubCategory" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Club Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                placeholder="Describe your club"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Address.Street" class="form-label">Street</label>
                                <input asp-for="Address.Street" class="form-control" placeholder="Street address">
                                <span asp-validation-for="Address.Street" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Address.City" class="form-label">City</label>
                                <input asp-for="Address.City" class="form-control" placeholder="City">
                                <span asp-validation-for="Address.City" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Address.State" class="form-label">State</label>
                                <input asp-for="Address.State" class="form-control" placeholder="State">
                                <span asp-validation-for="Address.State" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Image" class="form-label">Club Image</label>
                            <input asp-for="Image" type="file" class="form-control" accept="image/*">
                            <small class="form-text text-muted">Upload a representative image for your club</small>
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>