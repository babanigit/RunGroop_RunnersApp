@using RunGroopWebApp.Data.Enum
@model Club

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Delete Club Confirmation</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="icon-alert-triangle me-2"></i>
                        This action cannot be undone. All club data will be permanently deleted.
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Club Name</label>
                            <input type="text" class="form-control" value="@Model.Title" readonly>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Category</label>
                            <input type="text" class="form-control" value="@Model.ClubCategory" readonly>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" rows="3" readonly>@Model.Description</textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Street</label>
                            <input type="text" class="form-control" value="@Model.Address.Street" readonly>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">City</label>
                            <input type="text" class="form-control" value="@Model.Address.City" readonly>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">State</label>
                            <input type="text" class="form-control" value="@Model.Address.State" readonly>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <form method="post" asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="icon-trash me-2"></i>Confirm Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>