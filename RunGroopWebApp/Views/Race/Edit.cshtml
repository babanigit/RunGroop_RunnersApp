@using RunGroopWebApp.Data.Enum
@using RunGroopWebApp.ViewModels
@model EditRaceViewModel

<div class="container-fluid bg-light py-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h2 class="h4 mb-0 text-primary">Edit Race Details</h2>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="Edit" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id" />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group mb-3">
                                        <label asp-for="Title" class="form-label">Race Title</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="icon-flag"></i></span>
                                            <input asp-for="Title" class="form-control"
                                                placeholder="Enter race title" />
                                        </div>
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group mb-3">
                                        <label asp-for="Description" class="form-label">Race Description</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="icon-info"></i></span>
                                            <textarea asp-for="Description" class="form-control" rows="4"
                                                placeholder="Describe the race details"></textarea>
                                        </div>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="RaceCategory" class="form-label">Race Category</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="icon-layers"></i></span>
                                            <select asp-for="RaceCategory"
                                                asp-items="@Html.GetEnumSelectList<RaceCategory>()"
                                                class="form-control">
                                                <option value="">Select Race Category</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="RaceCategory" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Image" class="form-label">Race Image</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="icon-image"></i></span>
                                            <input asp-for="Image" type="file" class="form-control" />
                                        </div>
                                        <small class="text-muted">Recommended: JPG or PNG, max 5MB</small>
                                        <span asp-validation-for="Image" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group mb-3">
                                        <label asp-for="Address.Street" class="form-label">Street</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="icon-map-pin"></i></span>
                                            <input asp-for="Address.Street" class="form-control"
                                                placeholder="Street address" />
                                        </div>
                                        <span asp-validation-for="Address.Street" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group mb-3">
                                        <label asp-for="Address.City" class="form-label">City</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="icon-home"></i></span>
                                            <input asp-for="Address.City" class="form-control" placeholder="City" />
                                        </div>
                                        <span asp-validation-for="Address.City" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group mb-3">
                                        <label asp-for="Address.State" class="form-label">State</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="icon-compass"></i></span>
                                            <input asp-for="Address.State" class="form-control" placeholder="State" />
                                        </div>
                                        <span asp-validation-for="Address.State" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="icon-save mr-2"></i>Save Race Details
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .input-group-text {
        background-color: #f8f9fa;
        border-right: none;
    }

    .form-control {
        border-left: none;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #007bff;
    }
</style>

<script>
    // Optional: Add client-side validation
    $(document).ready(function () {
        $('form').validate({
            rules: {
                Title: { required: true },
                Description: { required: true },
                'RaceCategory': { required: true },
                'Address.Street': { required: true },
                'Address.City': { required: true },
                'Address.State': { required: true }
            },
            errorClass: 'is-invalid',
            errorElement: 'div',
            errorPlacement: function (error, element) {
                error.addClass('invalid-feedback');
                element.closest('.form-group').append(error);
            }
        });
    });
</script>