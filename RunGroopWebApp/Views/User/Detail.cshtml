@using RunGroopWebApp.ViewModels
@model UserDetailViewModel

<div class="container-fluid p-0">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger mb-0">
            <b>Sorry!</b> - @TempData["Error"]
        </div>
    }

    <nav aria-label="breadcrumb" class="bg-light py-3">
        <div class="container">
            <ol class="breadcrumb mb-0 bg-transparent p-0">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/users">Runners</a></li>
                <li class="breadcrumb-item active" aria-current="page">Profile</li>
            </ol>
        </div>
    </nav>

    <section class="profile-header bg-white py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-3 text-center mb-4 mb-md-0">
                    <img src="@Model.ProfileImageUrl" class="img-fluid rounded-circle shadow-lg"
                        style="max-width: 200px; height: 200px; object-fit: cover;" alt="@Model.UserName Profile">
                </div>
                <div class="col-md-9">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h1 class="h2 mb-2">@Model.UserName</h1>
                            <div class="text-muted mb-3">
                                <i class="icon-location mr-2"></i>@Model.Location
                            </div>
                            <div class="d-flex align-items-center mb-3">
                                <span class="badge badge-soft-primary mr-3">Pace: @Model.Pace mph</span>
                                <span class="badge badge-soft-success">Mileage: @Model.Mileage miles</span>
                            </div>
                        </div>
                        <div class="btn-group" role="group">
                            <button class="btn btn-outline-primary"><i class="icon-add-user mr-2"></i>Follow</button>
                            <button class="btn btn-outline-secondary"><i class="icon-mail"></i></button>
                        </div>
                    </div>
                    <p class="text-muted">
                        Passionate runner exploring new routes and pushing personal limits. Always looking to connect
                        with fellow running enthusiasts.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-light py-4">
        <div class="container">
            <ul class="nav nav-tabs nav-fill" id="profileTabs">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#races">Races</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#clubs">Clubs</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#followers">Followers</a>
                </li>
            </ul>
        </div>
    </section>

